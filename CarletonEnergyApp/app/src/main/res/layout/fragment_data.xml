<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zephyrus.testapp.carletonenergyapp.app.DataFragment"
    android:background="#ff40567a">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#070707"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="343dp"
            android:layout_height="319dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#29ff4c"
            android:alpha="0.4"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:background="#5cf1ff"
            android:alpha="0.6">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New CheckBox"
                android:id="@+id/checkBox"
                android:background="#2e36ff"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6c41ff"
            android:clickable="true"
            android:layoutMode="opticalBounds"
            android:alpha="0.6">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New CheckBox"
                android:id="@+id/checkBox2"
                android:background="#2e36ff"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>