<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.zephyrus.testapp.carletonenergyapp.app.WindActivity"
    android:background="#ff40567a">

    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#ff000000"
            android:baselineAligned="false"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Wind"
                android:id="@+id/textView"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_weight=".25"
                android:clickable="true"
                android:onClick="switchWind" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Energy"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_weight=".25"
                android:clickable="true"
                android:onClick="switchEnergy"
                android:background="#ff2b2b2b" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Graphs"
                android:id="@+id/textView3"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_weight=".25"
                android:clickable="true"
                android:onClick="switchData"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Settings"
                android:id="@+id/textView4"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_weight=".25"
                android:clickable="true"
                android:onClick="switchSettings"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Current Energy Consumption"
                android:id="@id/consumption_label"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1220"
                    android:id="@id/consumption_display"
                    android:layout_below="@id/consumption_label"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="kWh"
                    android:id="@id/kWH_consumption"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="35sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Current Energy Production"
                android:id="@id/production_label"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="987"
                    android:id="@id/production_display"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="kWh"
                    android:id="@id/kWh_production"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="80%"
                    android:id="@id/percent_wind_display"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Wind Power"
                    android:id="@id/percent_wind_label"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Last Updated:"
                    android:id="@id/last_updated_label"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12:14pm 4/26/2014"
                    android:id="@id/last_updated_display"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>