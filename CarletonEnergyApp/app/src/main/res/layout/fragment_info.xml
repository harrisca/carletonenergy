<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zephyrus.testapp.carletonenergyapp.app.InfoFragment"
    android:background="@drawable/background_dawn"
    android:id="@id/fragment_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/info_about"
        android:alpha="0.3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <com.zephyrus.testapp.carletonenergyapp.app.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info_about_us"
        android:id="@id/title_about"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:layout_weight="0.3"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="3dp"
        android:background="#ff555555"
        android:layout_below="@id/title_about"
        android:layout_centerHorizontal="true"></LinearLayout>

    <com.zephyrus.testapp.carletonenergyapp.app.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Licensing"
        android:id="@+id/textView2"
        android:textIsSelectable="true"
        android:textSize="18dp"
        android:layout_below="@id/title_about"
        android:layout_marginTop="20dp"
        android:textStyle="italic" />

</RelativeLayout>
